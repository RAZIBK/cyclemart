<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>

    <!-- Font Awesome -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      rel="stylesheet"
    />
    <!-- Google Fonts -->
    <link
      href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
      rel="stylesheet"
    />
    <!-- MDB -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/4.1.0/mdb.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <!-- Default form register -->
    <div class="container mt-5 col-xl-6">
      <form
        class="text-center border border-light p-5"
        action="/admin/editproduct/{{product._id}}"
        method="post"
        enctype="multipart/form-data"
        <p class="h4 mb-4">Edit Prduct</p>

        <div class="form-row mb-2">
          <div class="col">
            
            <!--  name -->
            <input
              type="text"
              id="defaultRegisterFormFirstName"
              class="form-control"
              {{!-- placeholder="Product Name" --}}
              name="productName"
              value="{{product.productName}}"
            />
             <div class="d-flex justify-content-start p-2">
           <label for="exampleInputPassword1" class="h6">productName</label>
            </div>
          </div>
         
       
        </div>
           <div class="form-row mb-2 d-flex">
          
          <div class="col">
            <!-- brand name -->
            {{! <input type="text" id="defaultRegisterFormLastName" class="form-control" placeholder="Brand" name="Brand"> }}
            <select name="brand" class="form-control">
              {{!-- <option value="none" selected>{{product.BrandName}}</option> --}}
              {{#each brandname}}
                <option>{{this.BrandName}}</option>
              {{/each}}

            </select>
            <div class="d-flex justify-content-start p-2">
           <label for="exampleInputPassword1" class="h6">Brand Name</label>
            </div>
          </div>
        </div>

        <!-- description -->

        <div class="form-row mb-2 d-flex">
          <div class="col me-2">
            <!-- price -->
            <input
              type="number"
              id="defaultRegisterFormFirstName"
              class="form-control"
              {{!-- placeholder="Price" --}}
              name="Mrp"
               value="{{product.mrp}}"
            />
            <div class="d-flex justify-content-start p-2">
           <label for="exampleInputPassword1" class="h6">Price</label>
            </div>
          </div>
          <div class="col">
            <!-- price -->
            <input
              type="number"
              id="defaultRegisterFormFirstName"
              class="form-control"
              {{!-- placeholder="Discount" --}}
              name="Discount"
              value="{{product.Discount}}"
            />
            <div class="d-flex justify-content-start p-2">
           <label for="exampleInputPassword1" class="h6">Discount</label>
            </div>
          </div>

        </div>
        <div class="form-row mb-2 ">
          <div class="col me-2">
            <select name="category" class="form-control">
              {{!-- <option value="none" selected>category</option> --}}
              {{#each category}}
                <option>{{this.category}}</option>
              {{/each}}
            </select>
            <div class="d-flex justify-content-start p-2">
           <label for="exampleInputPassword1" class="h6">category</label>
            </div>
          </div>
         
        </div>
        <div class="form-row mb-2 d-flex">
          <div class="col me-2">
            <!-- Color -->
            <input
              type="text"
              id="defaultRegisterFormLastName"
              class="form-control"
              {{!-- placeholder="Color" --}}
              name="color"
              value="{{product.Color}}"
            />
            <div class="d-flex justify-content-start p-2">
           <label for="exampleInputPassword1" class="h6">Color</label>
            </div>
          </div>

          <div class="col">
            <!-- sub category -->
            <input
              type="text"
              id="defaultRegisterFormLastName"
              class="form-control"
              {{!-- placeholder="Stock" --}}
              name="stock"
              value="{{product.Stoke}}"
            />
            <div class="d-flex justify-content-start p-2">
           <label for="exampleInputPassword1" class="h6">Stock</label>
            </div>
          </div>
        </div>
         <div class="form-row mb-2">
           <input 
        {{!-- <textarea --}}
      
        value="{{product.Description}}"
          type="text"
          id="defaultRegisterFormLastName"
          class="form-control"
          {{!-- placeholder="Description" --}}
          name="description"
          value="{{product.Description}}" 
        {{!-- ></textarea> --}}
        >
       
        <div class="d-flex justify-content-start p-2">
           <label for="exampleInputPassword1" class="h6">Description</label>
            </div>
             </div> 
         <div class="form-row mb-2 d-flex">
          <div class="col me-2">
            {{!-- <img src="/uploads/{{product.Image.0.contentType}};base64,{{product.Image.0.imageBase64}}" alt="" srcset="" style="width: 100px;height: auto; " class="mb-2" id="imgView"> --}}
            <!-- price -->
            {{!-- <img src="data:{{product.Image.0.contentType}};base64,{{product.Image.0.imageBase64}}"> --}}
            <input
              type="file"
              id="defaultRegisterFormFirstName"
              class="form-control"
              {{!-- placeholder="image" --}}
              name="files"
              {{!-- onchange="viewImage(event)" --}}
               multiple 
            />
            <input
              type="file"
              id="defaultRegisterFormLastName"
              class="form-control"
              {{!-- placeholder="Stock" --}}
              style="display: none;"
              name="files"
              
              value="data:{{product.Image.0.contentType}};base64,{{product.Image.0.imageBase64}}"
             
            />
            {{!-- <img src="{{product.Image.0.contentType}};base64,{{product.Image.0.imageBase64}}" alt="" srcset=""> --}}
            {{!-- <div class="d-flex justify-content-start p-2">
           <label for="exampleInputPassword1" class="h6">image</label>
            </div> --}}
          </div>
         
         </div>
         
          <div class="form-row mb-2 d-flex">
          <input
          
            type="submit"
            class="btn btn-info my-4 btn-bloc k"
            style="width: 50% ;"
          />
          </div>
        </div>
        

      </form>
    </div>
  


<script>
  function viewImage(event)=>{
document.getElementById('imgView').src=URL.createObjectURL(event.target.files[0])
  }
  
</script>
    <!-- MDB -->
    <script
      type="text/javascript"
      src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/4.1.0/mdb.min.js"
    ></script>

  </body>
</html>